        is_callback = False
    
    try:
        async with aiohttp.ClientSession() as session:
            url = f'{API_BASE_URL}/crm/{company_id}/leaderboard?period={period}&sort={sort}'
            async with session.get(url) as resp:
                leaders = await resp.json() if resp.status == 200 else []
                if not leaders:
